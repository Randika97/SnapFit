    <TextView
        android:id="@+id/imgUploadQuote"
        android:layout_width="223dp"
        android:layout_height="53dp"
        android:fontFamily="@font/semibold"
        android:gravity="center"
        android:text="Let us help you to find your perfect match"
        android:textColor="#546C6B"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.044"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/imgUploadFigureQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="608dp"
        android:fontFamily="@font/medium"
        android:text="Upload your front and side view of the figure"
        android:textColor="#797979"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/uploadFigureFront"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:backgroundTint="#577876"
        android:fontFamily="@font/medium"
        android:text="Front view"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFigureOne"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="216dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageViewFigureOne"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/front_body"></ImageView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/uploadFigureSide"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:backgroundTint="#577876"
        android:fontFamily="@font/medium"
        android:text="Side view"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFigureTwo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageViewFigureTwo"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/front_body"
            tools:ignore="MissingConstraints"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/imgUploadClothQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="496dp"
        android:fontFamily="@font/medium"
        android:text="Upload your outfit image to get a feedback"
        android:textColor="#797979"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/uploadCloth"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:backgroundTint="#577876"
        android:fontFamily="@font/medium"
        android:text="Upload Cloth"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewClothOne"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="438dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageViewClothOne"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/black_top"></ImageView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/imageUploadPageButton"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#577876"
        android:drawableRight="@drawable/right_arrow"
        android:fontFamily="@font/medium"
        android:text="Get Results"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- <ImageButton
         android:id="@+id/uploadFigureSide"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="112dp"
         app:layout_constraintEnd_toStartOf="@+id/cardViewFigureOne"
         app:layout_constraintHorizontal_bias="0.445"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/uploadFigureFront"
         app:srcCompat="@drawable/image_upload_icon" />-->


</androidx.constraintlayout.widget.ConstraintLayout>